mixin parallax(colorClass, buttonClass, title, phrase, description, img_Source, link)
    div(class="parallax-container center valign-wrapper")
      .container
        .row
          div(class="col s12 gray-text")
            h2(class= `${colorClass}`)= `${title}`
            p= `${phrase}`
            a(class= `${buttonClass}` href= `${link}`) Ir
      .parallax
        img(src= `${img_Source}`)
    .container
      .row
        div(class="col m12 s12 l12")
          .icon-block
            h2(class="center black-text")
              i.material-icons card_giftcard
            h5.center= `${phrase}`
            p.light= `${description}`
            p